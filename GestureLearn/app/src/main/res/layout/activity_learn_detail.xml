<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_detail_banner"
        android:layout_width="match_parent"
        android:layout_height="218dp"
        android:scaleType="centerCrop"
        tools:src="@drawable/img_kosakata_example"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tv_detail_title"
        android:layout_width="160dp"
        android:layout_height="40dp"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/green"
        android:textSize="17sp"
        tools:text="KOSAKATA"
        android:textAlignment="center"
        android:paddingTop="7dp"
        tools:background="@drawable/shape_lightgreen_rectangle_border_green"
        android:layout_marginTop="198dp"
        android:layout_marginStart="30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/ll_detail_main"
        android:layout_width="290dp"
        android:layout_height="290dp"
        android:padding="25dp"
        tools:background="@drawable/shape_border_lightgreen"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/tv_detail_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/iv_detail_gif"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            tools:src="@drawable/gif_quiz_example"
            android:clipToOutline="true"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_detail_word"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/green"
        android:textSize="22sp"
        tools:text="Bagaimana"
        android:textAlignment="center"
        tools:background="@drawable/shape_lightgreen_rectangle_border_green"
        android:paddingTop="2dp"
        android:paddingHorizontal="20dp"
        android:layout_marginTop="265dp"
        app:layout_constraintTop_toTopOf="@id/ll_detail_main"
        app:layout_constraintStart_toStartOf="@id/ll_detail_main"
        app:layout_constraintEnd_toEndOf="@id/ll_detail_main"/>

    <Button
        android:id="@+id/btn_detail_back"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:textColor="@color/green"
        android:textSize="12sp"
        android:text="Kembali"
        android:minHeight="10dp"
        android:paddingVertical="3dp"
        android:background="@drawable/shape_green_button"
        app:backgroundTint="@null"
        android:layout_marginBottom="80dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>